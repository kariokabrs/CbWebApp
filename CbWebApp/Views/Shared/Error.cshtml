@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Eita, que fedor!</h1>
<h2 class="text-danger">Um peido inesperado ocorreu, você tá podre!!!</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Modo Desenvolvedor</h3>
<p>
    Mudando para <strong>Desenvolvimento</strong> ambiente irá mostra mais informações do peido ocorrido.
</p>